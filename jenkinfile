pipeline {

    agent any
    
    environment {
        //PASS = credentials('registry-pass') 
        WORKSPACE = "/var/jenkins_home/workspace/pipeline-docker-maven"
    }

    stages {

        stage('Build') {
            steps {
                sh '''
                    docker run --rm  -v  /var/jenkins_home/workspace/pipeline-docker-maven:/app -v $WORKSPACE/root/.m2/:/root/.m2/ -w /app maven:3-alpine mvn -B -DskipTests clean package
                '''
            }

        }
    }
}